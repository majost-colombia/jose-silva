{% extends 'base.html.twig' %}

{% block body %}
    <h1>Editar producto</h1>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(form.categoria) }}
            {{ form_widget(form.categoria, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.codigo) }}
            {{ form_widget(form.codigo, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.descripcion) }}
            {{ form_widget(form.descripcion, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.marca) }}
            {{ form_widget(form.marca, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.precio) }}
            {{ form_widget(form.precio, { 'attr' : { 'class': 'form-control'} }) }}
        </div>
        <input type="submit" value="Editar" class="btn btn-success" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('producto_index') }}" class="btn btn-primary">Volver al listado</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
