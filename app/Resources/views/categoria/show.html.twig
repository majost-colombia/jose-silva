{% extends 'base.html.twig' %}

{% block body %}
    <h1>Resumen de la categoría: {{ categorium.nombre }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorium.id }}</td>
            </tr>
            <tr>
                <th>Código</th>
                <td>{{ categorium.codigo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ categorium.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción</th>
                <td>{{ categorium.descripcion }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if categorium.activo %}Sí{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categoria_index') }}" class="btn btn-primary">Volver al listado</a>
        </li>
        <li>
            <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="btn btn-success">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
